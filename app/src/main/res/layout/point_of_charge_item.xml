<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider1Details"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/listMarginTop"
        android:layout_marginHorizontal="@dimen/listMarginSide"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listMarginTop"
        android:layout_marginHorizontal="@dimen/listMarginSide"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pointOfChargeNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punto di ricarica"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/listMarginTop"
            android:layout_marginHorizontal="@dimen/listMarginSide"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listMarginTop"
            android:layout_marginHorizontal="@dimen/listMarginSide"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelVoltPointOfChargeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltage:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/voltPointOfChargesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listMarginTop"
            android:layout_marginHorizontal="@dimen/listMarginSide"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelKwPointOfChargeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/kwPointOfChargesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listMarginTop"
            android:layout_marginHorizontal="@dimen/listMarginSide"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelStatusPointOfChargeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/statusPointOfChargesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

